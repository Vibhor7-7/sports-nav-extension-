{
  "manifest_version": 3,
  "name": "Basketball Live Score Tracker",
  "version": "1.0",
  "description": "Track live basketball scores using SportsDB API",
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://www.thesportsdb.com/"
  ]
}
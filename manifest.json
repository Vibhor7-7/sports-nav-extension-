{
  "manifest_version": 3,
  "name": "Sports Nav",
  "version": "1.0",
  "description": "Track live sports scores for your favorite teams",
  "action": {
      "default_popup": "popup.html"
  },
  "permissions": [
      "storage",
      "alarms",
      "https://www.thesportsdb.com/*"
  ],
  "background": {
      "service_worker": "background.js"
  }
}